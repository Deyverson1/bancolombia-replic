---
import Facebook from "./icons/Facebook.astro";
import WhatApp from "./icons/WhatApp.astro";
import X from "./icons/X.astro";
import Instagram from "./icons/Instagram.astro";
import Youtube from "./icons/Youtube.astro";
import Linkeding from "./icons/Linkeding.astro";
import FooterContent from "./Footer.tsx";
---

<section class="px-4 py-4 md:px-40 md:py-20 w-full 2xl:px-96">
  <article class="flex w-full flex-col md:flex-row gap-x-2">
    <FooterContent client:load/>
    <section class="latest-card w-full my-2 md:my-13">
      <div>
        <p class="pb-6">
          Productos y servicios de Banca, Fiducia, Banca de Inversión,
          Financiamiento, además del portafolio ofrecido por las entidades del
          exterior en Panamá, Estados Unidos y Puerto Rico.
        </p>
      </div>
      <div class="flex">
        <img
          src="https://www.bancolombia.com/wcm/connect/www.bancolombia.com-26918/1136fde2-4716-4e0d-9525-cda53b638cea/Group+4.svg?MOD=AJPERES&CONVERT_TO=url&CACHEID=ROOTWORKSPACE.Z18_K9HC1202P86O40QTNS9EAE1S47-1136fde2-4716-4e0d-9525-cda53b638cea-nJvZkmc"
          alt=""
        />
        <p class="spanEnd pl-4">BANCOLOMBIA S.A. Establecimiento Bancario</p>
      </div>
      <div class="flex pt-10 gap-x-5">
        <a href=""><WhatApp class="size-4 fill-black" /></a>
        <a href=""> <Facebook class="size-4 fill-black" /></a>
        <a href=""> <X class="size-4 fill-black" /></a>
        <a href=""> <Instagram class="size-4 fill-black" /></a>
        <a href=""> <Youtube class="size-4 fill-black" /></a>
        <a href=""> <Linkeding class="size-4 fill-black" /></a>
      </div>
    </section>
  </article>
</section>
<footer
  class="md:px-40 py-4 w-full 2xl:px-96 flex justify-between items-center"
>
  <div>
    <img src="Bancolombia.png" alt="" />
  </div>
  <h4 class="text-black text-center">Copyright © 2024 Grupo Bancolombia</h4>
</footer>

<style>
  section {
    background-color: #2c2a29;
  }
  h3 {
    font-size: 18px;
    line-height: 20px;
    font-weight: 700;
    color: #ffffff;
  }
  li {
    font-size: 12px;
    font-weight: 400;
    line-height: 16px;
    color: #ffffff;
    letter-spacing: -0.17px;
    list-style: none;
  }
  p {
    font-size: 12px;
    font-weight: 400;
    line-height: 16px;
    color: #ffffff;
  }
  .latest-card {
    border-left: 1px solid white;
    padding-top: 50px;
    padding-left: 20px;
    max-width: 34.33333%;
  }
  .paddingCard {
    max-width: 15.6667%;
  }
  .pt-13 {
    padding-top: 52px;
  }
  .my-13 {
    margin-top: 56px;
    margin-bottom: 40px;
  }
  img {
    max-width: 180px;
  }
  .spanEnd {
    font-size: 8px;
    font-weight: 400;
    line-height: 16px;
    letter-spacing: -0.17px;
  }
  a {
    background-color: white;
    padding: 4px;
    border-radius: 100%;
  }
  i {
    font-size: 27px;
  }

  @media screen and (max-width: 427px) {
    .latest-card {
      max-width: 100%;
      border-left: none;
      padding-left: 2px;
      padding-top: 2px;
    }
    .paddingCard {
      max-width: 100%;
    }
  }
</style>