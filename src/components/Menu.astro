const dataTitle = [
  { title: "Tr√°mites digitales", image: "/icons/document-right.png", color: 'id1' },
  { title: "Negocios deuda", image: "/icons/hand-money.png" },
  { title: "Pagos", image: "/icons/cash.png" },
  { title: "Centro de Ayuda", image: "/icons/help.png" },
  { title: "Certificados bancarios", image: "/icons/document-left.png" },
  { title: "Solicita tu turno", image: "/icons/happy-face.png" },
];
