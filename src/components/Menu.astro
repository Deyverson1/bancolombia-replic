  .ink {
    background-color: white;
    box-shadow: 0px 3px 12px rgba(0, 0, 0, 0.1);
  }
  h3 {
    font-size: 14px;
    font-weight: 400;
    color: #2c2a29;
  }
  #id1{
    background-color: #F9D3E1;
  }
