---

<section class="md:px-36 pt-5 w-full 2xl:px-96">
  <div class="flex ink">
    {
      dataTitle.map((dato) => (
        <article class="flex flex-col items-center w-full flex-1 text-center " id={dato.color}>
          <main class="w-full py-5">
            <div>
              <a href="flex flex-col w-full flex-1 ">
                <div class="flex justify-center">
                  <img src={dato.image} alt={dato.title} />
                </div>
                <h3 class="pt-2">{dato.title}</h3>
              </a>
            </div>
          </main>
        </article>
      ))
    }
  </div>
</section>

<style>
  section {
    background-color: #f7f7f7;
  }
  img {
    width: 30px;
  }
