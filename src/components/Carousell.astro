---
import ArrowLeft from "./icons/ArrowLeft.astro";
import Arrow from "./icons/Arrow.astro";
import Plant from "./icons/Plant.astro";

const data = [
    {
        title: "¿Una 4x4 a cambio de tus datos?",
        subtitle: "Seguridad Financiera",
        description:
            " No pasa en la vida real. Nunca entregues tus datos, códigos de seguridad ni números de tarjetas.",
        button: "Protégete asi",
        image: "https://cdn.dynamicyield.com/api/8775742/images/1a7551748da9d__banner_1.jpg",
    },
    {
        title: " Tus antojos no dan espera",
        subtitle: "Tarjeta Débito Virtual ",
        description:
            "Pide la nueva Tarjeta Débito Virtual desde nuestra App. Préndela o apágala desde tu celu.¡Aquí y ahora, tu plata contigo!",
        button: "Conoce más",
        image: "https://cdn.dynamicyield.com/api/8775742/images/3809375b29dd7__banner_2_tdvirtual.jpg",
    },
    {
        title: "Financia hasta el 90% de la casa que quieres",
        subtitle: "Leasing habitacional",
        description:
            "Pide tu leasing habitacional no familiar con tasas más bajas que nuestro crédito de vivienda.",
        button: " Pregunta por el tuyo",
        image: "https://cdn.dynamicyield.com/api/8775742/images/211bff8458bda__banner_3.png",
    },
];
---

<div
    id="animation-carousel"
    class="relative w-full px-24 pt-52 bg-style-2 pb-10"
    data-carousel="static"
>
    <!-- Carousel wrapper -->
    <div class="relative overflow-hidden rounded-lg div-content">
        <!-- Item 1 -->
        {
            data.map((dato) => (
                <div class="duration-200 ease-linear px-16 " data-carousel-item>
                    <div class="flex">
                        <div class="flex h-full box-border gap-x-4 bg-div">
                            <div class="p-5 container-text w-5/12">
                                <h4>{dato.subtitle}</h4>
                                <h2 class="pb-4">{dato.title}</h2>
                                <p class="mb-2">{dato.description}</p>

                                <div class="flex items-end py-3 px-5">
                                    <span class="py-1 px-3 span-button">
                                        <a href="">{dato.button}</a>
                                    </span>
                                </div>
                            </div>
                            <div class="">
                                <img
                                    class="w-full h-full"
                                    src={dato.image}
                                    alt="image"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            ))
        }
        <!-- Slider controls -->
        <button
            type="button"
            class="absolute top-0 start-0 flex items-center justify-center h-full px-2 cursor-pointer group focus:outline-none"
            data-carousel-prev
        >
            <span
                class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-yellow-500 dark:bg-yellow-300 group-focus:ring-4 group-focus:ring-white"
            >
                <ArrowLeft class="size-8" />
                <span class="sr-only">Previous</span>
            </span>
        </button>
        <button
            type="button"
            class="absolute top-0 end-0 flex items-center justify-center h-full px-2 cursor-pointer group focus:outline-none"
            data-carousel-next
        >
            <span
                class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-yellow-500 dark:bg-yellow-300 group-focus:ring-4 group-focus:ring-white"
            >
                <Arrow class="size-8" />
                <span class="sr-only">Next</span>
            </span>
        </button>
    </div>
</div>
<div
    class="absolute top-40 right-0 gap-x-4 items-right w-6/12 z-1 flex flex-row"
>
    <a href="" class="inline-flex content-island gap-x-4">
        <span>
            <img
                src="/icons/document-right.png"
                alt=""
                class="w-12 h-7"
            /></span
        >
        <label for="" class="text-center"
            >Conoce aquí como protegerte del fraude</label
        >
        <span><Arrow class="size-8" /></span>
    </a>
    <a href="" class="inline-flex content-island"
        ><span>
            <Plant class="size-8" />
        </span>
        <label class="text-center" for=""
            >Con La Cuenta del Mar cuidamos los manglares. Entérate
        </label>
        <span><Arrow class="size-8" /></span></a
    >
</div>

<style>
    h2 {
        font-size: 56px;
        line-height: 55px;
        font-weight: 600;
        color: #2c2a29;
        letter-spacing: -4px;
    }
    h4 {
        font-size: 16px;
        line-height: 21px;
        font-weight: 600;
        color: #2c2a29;
    }
    p {
        font-size: 16px;
        line-height: 22px;
        font-weight: 400;
        color: #2c2a29;
        letter-spacing: -0.3px;
    }
    a {
        font-size: 16px;
        line-height: 24px;
        font-weight: 600;
        color: #2c2a29;
    }
    .bg-style-2 {
        background-color: #f7f7f7;
    }
    .bg-div {
        background-color: #f4f4f4;
    }
    .span-button {
        display: inline-block;
        background: #fdda24;
        color: #2c2a29;
        padding: 13px 19px;
        line-height: 24px;
        box-sizing: content-box;
        border-radius: 100px;
        text-align: center;
        box-shadow: 0 1px 8px rgba(0, 0, 0, 0.1);
    }
    .span-button:hover {
        box-shadow: 0 1px 8px rgba(0, 0, 0, 0.5);
    }
    .div-content {
        height: 396px;
    }
    .content-island {
        color: #2c2a29;
        display: inline-flex;
        flex-direction: row;
        height: 90px;
        padding: 5px 15px;
        justify-content: space-between;
        align-items: center;
        font-size: 16px;

        max-width: 277px;
        width: inherit;
        border-radius: 0;
        background: #fff;
        box-shadow: 0 1px 8px rgba(0, 0, 0, 0.1);
        position: relative;
    }
    label {
        font-size: 16px;
        line-height: 22px;
        font-weight: 400;
        color: #2c2a29;
        letter-spacing: -0.3px;
    }
</style>
<script>
    import initSlider from "./Carousell.ts";
    initSlider();
</script>
