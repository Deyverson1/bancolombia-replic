  img {
    object-fit: cover;
    /* width: 100%; */
  }
  .container-text{
    height: 180px;
  }
  h3 {
    font-size: 28px;
    line-height: 30px;
    font-weight: 700;
    color: #2c2a29;
    letter-spacing: -0.6px;
  }
  h4 {
