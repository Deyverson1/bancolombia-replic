---
const { data, secondary, title } = Astro.props
---

<section class="flex flex-col px-40 py-10 w-full 2xl:px-96">
  <h3 class="mb-2 pt-5 pb-5 ">{title}</h3>
  <section class="flex w-full gap-4 ">
    {
      data.map((dato: { color: any; image: string | null | undefined; title: unknown; subTitle: unknown; description: unknown; href: string | URL | null | undefined; button: unknown, id: string, id2: string, id3: string, }) => (
        <div class="flex lg:w-1/2 w-full">
          <div style={`background-color: ${dato.color}`} id={dato.id}>
            <div>
              <img
                class="h-48"
                src={dato.image}
                alt={`extraido de ${dato.title}`}
              />
            </div>
            <div class="flex flex-col h-full box-border" id={dato.id2}>
              <div class="p-5 container-text" id={dato.id3}>
                <h4>{dato.subTitle}</h4>
                <h2 class="pb-4">{dato.title}</h2>
                <p class="mb-2">{dato.description}</p>
              </div>
              <div class="flex items-end py-3 px-5">
                <span  class="py-1 px-3">
                  <a href={dato.href}>{dato.button}</a>
                </span>
              </div>
            </div>
          </div>
        </div>
      ))
    }
    {
      secondary.map((dato: { color: any; image: string | null | undefined; title: unknown; subTitle: unknown; description: unknown; button: unknown, imageStyle: string, id: string , id2: string }) => (
        <div class="flex w-full lg:w-1/4">
          <div style={`background-color: ${dato.color}`}>
            <div class={`${dato.id2}`}>
              <img
                class={`${dato.id}`}
                src={dato.image}
                alt={`extraido de ${dato.title}`}
              />
            </div>
            <div class="">
              <div class="container-text p-5">
                <h4>{dato.subTitle}</h4>
                <h2 class="titleSecondary pb-2">{dato.title}</h2>
                <p class="descriptionSecondary">{dato.description}</p>
              </div>
              <div class="py-3 px-5 flex items-end">
                <span class="py-1 px-3">
                  <a href="#">{dato.button}</a>
                </span>
              </div>
            </div>
          </div>
        </div>
      ))
    }
    
  </section>
</section>
